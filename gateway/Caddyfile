{
	email {$ACME_EMAIL}
}

*.{$DOMAIN} {
	tls {
		dns cloudflare {env.CLOUDFLARE_API_TOKEN}
		resolvers nina.ns.cloudflare.com randy.ns.cloudflare.com
		propagation_delay 60s
	}

	@audiobooks host audiobooks.{$DOMAIN}
	handle @audiobooks {
		reverse_proxy audiobookshelf:80
	}

	@vault host vault.{$DOMAIN}
	handle @vault {
		reverse_proxy vaultwarden:80
	}

	@music host music.{$DOMAIN}
	handle @music {
		reverse_proxy navidrome:4533
	}

	@money host money.{$DOMAIN}
	handle @money {
		reverse_proxy ihatemoney:8000
	}

	@watch host watch.{$DOMAIN}
	handle @watch {
		reverse_proxy jellyfin:8096
	}

	@download host download.{$DOMAIN}
	handle @download {
		reverse_proxy qbittorrent:8080
	}

	@contacts host contacts.{$DOMAIN}
	handle @contacts {
		reverse_proxy radicale:5232
	}

	@notes host notes.{$DOMAIN}
	handle @notes {
		reverse_proxy silverbullet:3000
	}

	@photos host photos.{$DOMAIN}
	handle @photos {
		reverse_proxy immich-server:2283
	}

	@home host home.{$DOMAIN}
	handle @home {
		reverse_proxy homepage:3000
	}

	@memory host memory.{$DOMAIN}
	handle @memory {
		reverse_proxy hashcards:8000
	}

	handle {
		abort
	}
}
